#!/usr/bin/env ruby

require 'awesome_print'
require 'date'
require 'rodzilla'
require 'mothra'

@config = YAML.load_file 'config.yml'

@bz = Rodzilla::Resource::Bug.new(@config['BZ_URL'], @config['BZ_USER'], @config['BZ_PASSWD'], :json)

def search(keyword)
  last_3_months = DateTime.now - 90
  ret = @bz.search(component: 'Individual Port(s)', product: ['Ports & Packages'], creation_time: last_3_months, summary: keyword)

  ap ret
end

def create

end

